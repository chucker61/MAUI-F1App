<MudTimelineItem Color="@Color">
    <MudLink Href=@Href>
        <MudAlert Severity="@Severity" Class="rounded-xl pa-3" Icon="false" Dense="true">
            <MudStack Row="true" Class="d-flex align-center">
                <MudStack>
                    <MudText Typo="Typo.h4">@SessionName</MudText>
                    <MudText Typo="Typo.body2">@Date</MudText>
                </MudStack>
                <MudStack Justify="Justify.FlexEnd">
                    <MudIcon Icon="@Icon" Color="Color.Surface" Size="Size.Large" />
                </MudStack>
            </MudStack>
        </MudAlert>
    </MudLink>
</MudTimelineItem>

@code {
    [Parameter]
    public string Href { get; set; }
    [Parameter]
    public string SessionName { get; set; }
    [Parameter]
    public string Date { get; set; }
    [Parameter]
    public Severity Severity { get; set; }
    [Parameter]
    public Color Color { get; set; }
    [Parameter]
    public string Icon { get; set; }

}
