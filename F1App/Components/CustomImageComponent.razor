<div style="position: relative; cursor: pointer; display:flex" @onclick="@this.Clicked">

    @* the image *@
    <MudImage Width="400" Src="@this.Src" Alt="@this.Alt" ObjectFit="ObjectFit.Cover" />

    

    @* The text (in black) *@
    <span style="position: absolute; top: 0; left: 0; padding: 25px; width: 100vw; color: white">
        <MudText Typo="Typo.h4">@this.Name</MudText>
        <MudText Typo="Typo.h6">@this.ShortName</MudText>
    </span>

</div>

@code {

    [Parameter]
    public string Src { get; set; } = default!;

    [Parameter]
    public string Alt { get; set; } = string.Empty;

    [Parameter]
    public string Name { get; set; } = default!;

    [Parameter]
    public string ShortName { get; set; } = default!;

    [Parameter]
    public EventCallback OnClick { get; set; }

    private async Task Clicked()
    {
        await this.OnClick.InvokeAsync();
    }
}